@import "../../style/config.styl"

DARK = darken(BACKGROUND, 20%)

.result
  border: 1px DARK
  padding: 1em
  position: relative
  height: auto
  max-height: 4000px
  &:hover, &:focus
    background-position: 0 30%

  pre
    padding: 1em
    font-size: 132%
    width: 100% 
    overflow-y: scroll
    max-height: 50vh
    white-space: pre-wrap
    word-wrap: break-word

  pre::-webkit-scrollbar
    display: none

  .close
    background:  DARK
    padding: .5em
    position: absolute
    top: 0px
    right: 0px
