@import "../../style/config.styl"

.dropbox, .result
  border: 1px solid lighten(BACKGROUND, 10%)
  color: #f3f3f3
  position: relative
  cursor: pointer
  transition: all 450ms
  box-shadow: inset 5px 5px 50px rgba(0, 0, 0, 0.15)
  font-size: 72%
  background: linear-gradient(darken(SECONDARY, 1%), darken(BACKGROUND, 2%))
  transition: background 1s ease-out
  background-size:100% 200%
  border-radius: 14px
  filter: drop-shadow(2px 2px 30px SHADE)
  margin-bottom: 2em

  &:hover, &:focus
    background-position: 0 50%

  p
    text-align: center
    padding: 5em 0


  .input-file
    opacity: 0
    width: 100%
    height: 200px
    position: absolute
    cursor: pointer

.dropzone-over
  background-position: 0 100%
